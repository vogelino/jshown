.json-group
	font-family $jshownFontFamily
	font-size $jshownFontSize
	line-height $jshownFontSize
	width 100%
	float left
	box-sizing border-box

	> .key-label
		width auto
		float left
		box-sizing border-box
		position relative
		padding-left 15px
		margin-right 5px
		margin-bottom 2px
		color $jshownColorsKey

		.metadata
			font-size $jshownInfoFontSize
			color $jshownInfoColor
			padding 3px 4px 2px
			border-radius 3px
			background $jshownInfoBackground

		.metadata,
		.metadata .type,
		.metadata .size
			display inline-block
			margin-left 5px

		.metadata > span:last-child
			margin-right 5px

	> .key-label:before
		font-family $jshownKeySymbolFontFamily
		font-size $jshownKeySymbolFontSize
		color darkgrey
		content $jshownKeyClosedSymbol
		position absolute
		top 3px
		left 0

	&.open > .key-label:before
		content $jshownKeyOpenSymbol

	&.array > .key-label .metadata .size
		&:before
			content '['
		&:after
			content ' items]'

	&.object > .key-label .metadata .size
		&:before
			content '{'
		&:after
			content ' keys}'

	&.with-children > .value-container
		display none

	> .value-container

		> .json-group
			padding-left 20px

	&.open > .value-container
		display block

	&.without-children > .key-label:before
		content ''

	&.number > .value-container > .single-value
		color $jshownColorsInteger

	&.string > .value-container > .single-value
		color $jshownColorsString

		&:before,
		&:after
			content '"'
